<?xml version="1.0" encoding="utf-8"?>
<com.klk.common.widget.view.SquareView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp">

    <View
        android:id="@+id/view_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@color/black_alpha_112"/>
    <CheckBox
        android:id="@+id/cb_selected"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:visibility="gone"
        android:button="@drawable/sel_cb_circle"
        tools:visibility="visible"
        android:clickable="false"
        android:drawablePadding="0dp"
        android:enabled="false"
        android:padding="0dp"
        app:buttonTint="@color/cb_gallery"
        />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"/>

</com.klk.common.widget.view.SquareView>